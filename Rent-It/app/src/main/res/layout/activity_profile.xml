 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="sdgkteam10.rent_it.ProfileActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true">

        <!--TODO: move this to the top right as a dropdown option -->

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="@string/load"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/colorForeground"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingBottom="30dp"
            tools:ignore="UnusedAttribute" />

        <TextView
            android:id="@+id/contact_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_name"
            android:layout_centerHorizontal="true"
            android:text="@string/contact_info"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/email_label"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:text="@string/show_email"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_below="@+id/contact_label"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/email_label"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="@string/load"
            android:textColor="@color/colorForeground"
            android:layout_toRightOf="@+id/state_zip_label"
            android:layout_toEndOf="@+id/state_zip_label" />

        <TextView
            android:id="@+id/phone_label"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/email_label"
            android:paddingTop="10dp"
            android:text="@string/show_phone"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/profile_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/phone_label"
            android:layout_toEndOf="@+id/address_label"
            android:ems="10"
            android:inputType="phone"
            android:text="@string/load"
            android:textColor="@color/colorForeground"
            android:layout_alignLeft="@+id/profile_email"
            android:layout_alignStart="@+id/profile_email" />

        <TextView
            android:id="@+id/address_label"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/phone_label"
            android:paddingTop="10dp"
            android:text="@string/show_address"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="18sp"
            android:textStyle="italic" />

        <EditText
            android:inputType="textPostalAddress"
            android:id="@+id/profile_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_phone"
            android:layout_alignStart="@+id/profile_phone"
            android:layout_alignTop="@+id/address_label"
            android:ems="10"
            android:maxLines="4"
            android:singleLine="true"
            android:textColor="@color/colorForeground"
            android:text="@string/load" />

        <TextView
            android:id="@+id/city_label"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:text="@string/show_city"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_alignTop="@+id/profile_city"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/state_zip_label"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:paddingTop="10dp"
            android:text="@string/show_state_zip"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorForeground"
            android:textSize="18sp"
            android:textStyle="italic"
            android:layout_alignTop="@+id/profile_state"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:inputType="textPostalAddress"
            android:id="@+id/profile_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="4"
            android:singleLine="true"
            android:textColor="@color/colorForeground"
            android:layout_below="@+id/profile_address1"
            android:layout_toEndOf="@+id/address_label"
            android:text="@string/load"
            android:layout_alignLeft="@+id/profile_address1"
            android:layout_alignStart="@+id/profile_address1" />

        <EditText
            android:id="@+id/profile_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="4"
            android:singleLine="true"
            android:inputType="textPostalAddress"
            android:textColor="@color/colorForeground"
            android:layout_below="@+id/profile_address2"
            android:layout_alignLeft="@+id/profile_address2"
            android:layout_alignStart="@+id/profile_address2"
            android:text="@string/load" />

        <EditText
            android:id="@+id/profile_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="4"
            android:singleLine="true"
            android:text="@string/load"
            android:textColor="@color/colorForeground"
            android:inputType="textPostalAddress"
            android:layout_below="@+id/profile_city"
            android:layout_alignLeft="@+id/profile_city"
            android:layout_alignStart="@+id/profile_city" />

        <Spinner
            android:id="@+id/profile_state_spinner"
            android:layout_width="301dp"
            android:layout_height="46dp"
            android:layout_gravity="center_horizontal"
            android:spinnerMode="dropdown"
            android:layout_below="@+id/profile_city"
            android:layout_alignLeft="@+id/profile_city"
            android:layout_alignStart="@+id/profile_city"
            android:layout_alignRight="@+id/profile_zip"
            android:layout_alignEnd="@+id/profile_zip" />

        <EditText
            android:inputType="textPostalAddress"
            android:id="@+id/profile_zip"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="4"
            android:singleLine="true"
            android:text="@string/load"
            android:textColor="@color/colorForeground"
            android:layout_below="@+id/profile_city"
            android:layout_alignRight="@+id/profile_city"
            android:layout_alignEnd="@+id/profile_city" />

        <Button
            android:id="@+id/edit_button"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:text="@string/edit_profile"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorMiddle"
            android:background="@color/colorForeground"/>

</RelativeLayout>