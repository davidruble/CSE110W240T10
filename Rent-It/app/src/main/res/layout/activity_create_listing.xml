<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sdgkteam10.rent_it.CreateListingActivity"
    android:background="#0e2a28">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/createListtingTitle"
        android:layout_gravity="center_horizontal"
        android:text="Post an Item"
        android:textSize="30dp"
        android:textColor="#40c1b8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="273dp"
        android:layout_height="wrap_content"
        android:id="@+id/itemNameText"
        android:hint="Bicycle"
        android:singleLine="true"
        android:textColorHint="#008279"
        android:textColor="#008279"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/createListtingTitle"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toEndOf="@+id/textView9" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/priceText"
        android:textColorHint="#008279"
        android:hint="$20.00"
        android:textIsSelectable="false"
        android:textColor="#008279"
        android:layout_alignLeft="@+id/itemNameText"
        android:layout_alignStart="@+id/itemNameText"
        android:layout_below="@+id/itemNameText"
        android:layout_toStartOf="@+id/spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rent Duration:"
        android:id="@+id/textView10"
        android:textSize="22dp"
        android:textColor="#008279"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="56dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Photos"
        android:id="@+id/button3"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/startdateText"
        android:text="Starting Date"
        android:textColor="#008279"
        android:layout_above="@+id/button3"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enddateText"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:text="Ending Date"
        android:layout_alignTop="@+id/startdateText"
        android:layout_toRightOf="@+id/textView10"
        android:layout_toEndOf="@+id/textView10"
        android:textColor="#008279" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Name:"
        android:id="@+id/textView9"
        android:layout_alignBaseline="@+id/itemNameText"
        android:layout_alignBottom="@+id/itemNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#008279" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Item Price:"
        android:id="@+id/textView11"
        android:layout_alignBaseline="@+id/priceText"
        android:layout_alignBottom="@+id/priceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/createListtingTitle"
        android:textColor="#008279"
        android:layout_toLeftOf="@+id/createListtingTitle" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:entries="@array/rentLength_arrays"
        android:layout_below="@+id/itemNameText"
        android:layout_toEndOf="@+id/createListtingTitle"
        android:layout_alignBottom="@+id/textView11"
        android:textColor="#008279"
        android:layout_alignLeft="@+id/enddateText"
        android:layout_alignStart="@+id/enddateText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:maxLength="150"
        android:ems="10"
        android:id="@+id/editText9"
        android:textColorHint="#008279"
        android:hint="Describe item in 150 characters or less"
        android:textColor="#008279"
        android:layout_below="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Description:"
        android:id="@+id/textView13"
        android:textColor="#008279"
        android:layout_below="@+id/priceText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Category:"
        android:id="@+id/textView12"
        android:textColor="#008279"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/editText9"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:entries="@array/itemCategories_arrays"
        android:layout_toRightOf="@+id/textView10"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignRight="@+id/enddateText"
        android:layout_alignEnd="@+id/enddateText"
        android:layout_alignBottom="@+id/textView12"
        android:textColor="#008279" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
